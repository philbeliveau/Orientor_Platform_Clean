# PRODUCTION ENVIRONMENT CONFIGURATION - ORIENTOR PLATFORM
# =========================================================
# 
# ðŸš¨ CRITICAL: This file contains production-ready configuration
# ðŸš¨ Replace placeholder values with actual production secrets
# ðŸš¨ Keep this file secure and never commit to version control

# ENVIRONMENT SETTINGS
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
PORT=8000
HOST=0.0.0.0

# DATABASE CONFIGURATION - Production PostgreSQL
DATABASE_URL=postgresql://orientor_prod:REPLACE_WITH_STRONG_PASSWORD@production-db-host:5432/orientor_production
DB_HOST=production-db-host
DB_PORT=5432
DB_NAME=orientor_production
DB_USER=orientor_prod
DB_PASSWORD=REPLACE_WITH_STRONG_DATABASE_PASSWORD

# JWT SECURITY CONFIGURATION - CRITICAL FOR PRODUCTION
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=REPLACE_WITH_64_CHAR_SECRET_FROM_SECRETS_MODULE
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_64_CHAR_SECRET_FROM_SECRETS_MODULE

# RSA Key Paths (Recommended for production)
JWT_PRIVATE_KEY_PATH=/app/keys/jwt_private.pem
JWT_PUBLIC_KEY_PATH=/app/keys/jwt_public.pem

# REDIS CONFIGURATION - Required for token blacklisting
REDIS_URL=redis://production-redis-host:6379
REDIS_PASSWORD=REPLACE_WITH_REDIS_PASSWORD

# SECURITY CONFIGURATION
ALLOWED_ORIGINS=https://orientor.vercel.app,https://www.orientor.com
ALLOWED_HOSTS=orientor.com,*.orientor.com,orientor.vercel.app
CORS_ALLOW_CREDENTIALS=true
BCRYPT_ROUNDS=12

# SESSION SECURITY
SESSION_TIMEOUT_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# RATE LIMITING
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW_MINUTES=15

# CLERK AUTHENTICATION CONFIGURATION - PRODUCTION
# ===============================================
# CRITICAL: These MUST be configured for production deployment
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_REPLACE_WITH_PRODUCTION_CLERK_PUBLISHABLE_KEY
CLERK_SECRET_KEY=sk_live_REPLACE_WITH_PRODUCTION_CLERK_SECRET_KEY
NEXT_PUBLIC_CLERK_DOMAIN=your-production-domain.clerk.com

# AI SERVICE API KEYS - SECURE THESE
OPENAI_API_KEY=sk-REPLACE_WITH_ACTUAL_OPENAI_KEY
ANTHROPIC_API_KEY=sk-ant-REPLACE_WITH_ACTUAL_ANTHROPIC_KEY
PINECONE_API_KEY=REPLACE_WITH_ACTUAL_PINECONE_KEY
PINECONE_ENVIRONMENT=us-west4-gcp

# EMAIL CONFIGURATION
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@orientor.com
SMTP_PASSWORD=REPLACE_WITH_APP_PASSWORD
FROM_EMAIL=noreply@orientor.com

# SECURITY HEADERS
ENABLE_SECURITY_HEADERS=true
ENABLE_HTTPS_REDIRECT=true

# MONITORING AND LOGGING
SENTRY_DSN=https://REPLACE_WITH_SENTRY_DSN@sentry.io/project
LOG_FILE_PATH=/app/logs/orientor_production.log

# BACKUP CONFIGURATION
BACKUP_ENABLED=true
BACKUP_FREQUENCY_HOURS=6
BACKUP_RETENTION_DAYS=30

# FEATURE FLAGS
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=true

# FILE UPLOAD LIMITS
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx