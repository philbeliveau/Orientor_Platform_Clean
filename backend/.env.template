# SECURE ENVIRONMENT CONFIGURATION - ORIENTOR PLATFORM
# =======================================================
# 
# CRITICAL SECURITY NOTICE:
# üö® This file contains template values for environment variables
# üö® Copy this to .env and replace ALL values with secure production values
# üö® NEVER commit the actual .env file to version control
# üö® Use strong, randomly generated secrets in production

# DATABASE CONFIGURATION
# ======================
DATABASE_URL=postgresql://username:password@localhost:5432/orientor_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=orientor_db
DB_USER=orientor_user
DB_PASSWORD=your_secure_database_password_here

# JWT SECURITY CONFIGURATION
# ===========================
# CRITICAL: Generate strong random secrets for production
# Use: python -c "import secrets; print(secrets.token_urlsafe(64))"

# RSA key file paths for JWT signing (recommended for production)
JWT_PRIVATE_KEY_PATH=/app/keys/jwt_private.pem
JWT_PUBLIC_KEY_PATH=/app/keys/jwt_public.pem

# Alternative: Direct secret keys (use RSA keys instead for better security)
JWT_SECRET_KEY=REPLACE_WITH_STRONG_64_CHAR_SECRET_FROM_SECRETS_MODULE
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_64_CHAR_SECRET_FROM_SECRETS_MODULE

# REDIS CONFIGURATION (for token blacklisting and caching)
# =========================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# AI SERVICE API KEYS
# ===================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# GOOGLE AI SERVICES (if used)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# EMAIL CONFIGURATION (for notifications)
# =======================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=noreply@orientor.com

# SECURITY CONFIGURATION
# ======================
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true
BCRYPT_ROUNDS=12

# SESSION SECURITY
SESSION_TIMEOUT_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# RATE LIMITING
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW_MINUTES=15

# DEPLOYMENT CONFIGURATION
# ========================
ENVIRONMENT=development  # development, staging, production
DEBUG=false
LOG_LEVEL=INFO

# Railway/Production specific
PORT=8000
HOST=0.0.0.0

# MONITORING AND LOGGING
# ======================
SENTRY_DSN=your_sentry_dsn_here_for_error_tracking
LOG_FILE_PATH=/app/logs/orientor.log

# FEATURE FLAGS
# =============
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=false

# SECURITY HEADERS
# ===============
ENABLE_SECURITY_HEADERS=true
ENABLE_HTTPS_REDIRECT=true

# FILE UPLOAD LIMITS
# ==================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# BACKUP CONFIGURATION
# ===================
BACKUP_ENABLED=true
BACKUP_FREQUENCY_HOURS=24
BACKUP_RETENTION_DAYS=30

