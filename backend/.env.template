# DATABASE CONFIGURATION
# ======================
DATABASE_URL=postgresql://username:password@localhost:5432/orientor_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=orientor_db
DB_USER=orientor_user
DB_PASSWORD=your_secure_database_password_here

# CLERK AUTHENTICATION CONFIGURATION
# =====================================
# CRITICAL: Get these values from your Clerk dashboard
# Development: https://dashboard.clerk.com
# Production: Use separate Clerk application

# CLERK API KEYS (Required for backend authentication)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_development_key_here
CLERK_SECRET_KEY=sk_test_your_development_secret_here
NEXT_PUBLIC_CLERK_DOMAIN=your-clerk-domain.clerk.accounts.dev

# REDIS CONFIGURATION (for token blacklisting and caching)
# =========================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# CLERK AUTHENTICATION CONFIGURATION
# ===================================
# CRITICAL: Required for Clerk authentication to work
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_REPLACE_WITH_ACTUAL_CLERK_PUBLISHABLE_KEY
CLERK_SECRET_KEY=sk_test_REPLACE_WITH_ACTUAL_CLERK_SECRET_KEY
NEXT_PUBLIC_CLERK_DOMAIN=your-clerk-domain.clerk.accounts.dev

# AI SERVICE API KEYS
# ===================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# GOOGLE AI SERVICES (if used)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# EMAIL CONFIGURATION (for notifications)
# =======================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=noreply@orientor.com

# SECURITY CONFIGURATION
# ======================
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true
BCRYPT_ROUNDS=12

# SESSION SECURITY
SESSION_TIMEOUT_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# RATE LIMITING
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW_MINUTES=15

# DEPLOYMENT CONFIGURATION
# ========================
ENVIRONMENT=development  # development, staging, production
DEBUG=false
LOG_LEVEL=INFO

# Railway/Production specific
PORT=8000
HOST=0.0.0.0

# MONITORING AND LOGGING
# ======================
SENTRY_DSN=your_sentry_dsn_here_for_error_tracking
LOG_FILE_PATH=/app/logs/orientor.log

# FEATURE FLAGS
# =============
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=false

# SECURITY HEADERS
# ===============
ENABLE_SECURITY_HEADERS=true
ENABLE_HTTPS_REDIRECT=true

# FILE UPLOAD LIMITS
# ==================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# BACKUP CONFIGURATION
# ===================
BACKUP_ENABLED=true
BACKUP_FREQUENCY_HOURS=24
BACKUP_RETENTION_DAYS=30

