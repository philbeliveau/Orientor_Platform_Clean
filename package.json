{
  "name": "orientor-platform",
  "version": "1.0.0",
  "description": "AI-powered career guidance platform with comprehensive testing",
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:install": "playwright install",
    "dev:full": "concurrently \"cd frontend && npm run dev\" \"cd backend && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000\"",
    "test:ci": "playwright test --reporter=github",
    "test:docker": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "concurrently": "^8.2.2"
  },
  "keywords": ["ai", "career", "guidance", "testing", "playwright", "e2e"],
  "author": "Orientor Platform Team",
  "license": "MIT"
}